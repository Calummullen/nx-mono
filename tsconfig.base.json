{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@calum-business-mono/shared-components": [
        "shared-components/src/index.ts"
      ],
      "@calum-business-mono/shared-components/server": [
        "shared-components/src/server.ts"
      ],
      "@calum-business-mono/shared-components/src/lib/*": [
        "shared-components/src/lib/*"
      ],
      "@calum-business-mono/shared-components/src/email/*": [
        "shared-components/src/email/*"
      ],
      "@public/images/*": ["public/images/*"],
      "@public/fonts/*": ["public/fonts/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
